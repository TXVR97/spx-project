{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="flex justify-center"><h1 class=" shadow-inner  text-black w-fit uppercase text-2xl m-10  px-2 py-2 rounded-xl font-semibold sm:mt-24 sm:text-4xl lg:text-5xl"> Ajouter un Utilisateur</h1></div>
	<div class="w-full md:w-[684px] lg:w-[884px] mx-auto sm:pt-24 ">
		<div class="p-6 border border-gray-300 sm:rounded-md">

   {{ form_start(registrationForm) }}
			<div class="grid grid-cols-6 gap-4 col-span-full lg:col-span-3">
				<div class="col-span-full sm:col-span-3">	
                        				
						{{ form_row(registrationForm.full_name,{
                            widget_class: 'w-full rounded-md focus:ring focus:ring-opacity-75 focus:ring-indigo-400 dark:border-gray-700 dark:text-gray-900',
                            label_class: 'text-sm'
                        }) }}																	
				</div>
                <div class="col-span-full sm:col-span-3">
				{{ form_row(registrationForm.email,{
                            widget_class: 'w-full rounded-md focus:ring focus:ring-opacity-75 focus:ring-indigo-400 dark:border-gray-700 dark:text-gray-900',
                            label_class: 'text-sm'
                        }) }}
                </div>
                <div  class="col-span-full sm:col-span-3">
				{{ form_row(registrationForm.plainPassword,{
                            widget_class: 'w-full rounded-md focus:ring focus:ring-opacity-75 focus:ring-indigo-400 dark:border-gray-700 dark:text-gray-900',
                            label: 'Password'
                            
                        }) }}
                </div>
                <div class="col-span-full sm:col-span-2">
				{{ form_row(registrationForm.roles,{
                            widget_class: 'w-full rounded-md focus:ring focus:ring-opacity-75 focus:ring-indigo-400 dark:border-gray-700 dark:text-gray-900',
                            label_class: 'text-sm'
                        }) }}
                </div>
                <div class="col-span-full">
				{{ form_row(registrationForm.partner,{
                            widget_class: 'w-full rounded-md focus:ring focus:ring-opacity-75 focus:ring-indigo-400 dark:border-gray-700 dark:text-gray-900',
                            label_class: 'text-sm'
                        }) }}
                </div>
                <div class="col-span-full">
				{{ form_row(registrationForm.structure,{
                            widget_class: 'w-full rounded-md focus:ring focus:ring-opacity-75 focus:ring-indigo-400 dark:border-gray-700 dark:text-gray-900',
                            label_class: 'text-sm'
                        }) }}
                </div>
                
				
			</div>
            <div class="flex justify-center">
			<button type="submit" class="transition duration-150 ease-in-out font-semibold hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-700 border bg-indigo-500 rounded text-indigo-100 px-8 py-2 w-64  ml-2 text-sm mt-10 " >{{ button_label|default('Ajouter Utilisateur') }}</button>
            </div>
			{{ form_end(registrationForm) }}
            </div>
	</div>
	<div class="flex justify-center">
		<div class="">
			<a href="{{ path('les_utilisateurs') }}">
				<button class="font-semibold text-indigo-500 transition duration-150 ease-in-out hover:bg-indigo-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-700 border bg-indigo-200 rounded  px-8 py-2  ml-2 text-sm mt-10 ">
					<i class="fa fa-list mr-2"></i>Utilisateurs existants</button>
			</a>
		</div>
	</div>
	<div class="flex justify-center">
		<a class="  flex justify-center w-16 font-semibold  text-indigo-500 transition duration-150 ease-in-out hover:bg-indigo-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-700 border bg-indigo-100  px-8 py-2   text-sm mt-10 rounded-2xl" href="{{ path('app_admin') }}">Retour</a>
	</div>
{% endblock %}
