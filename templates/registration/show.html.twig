{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block content %}
   
    <div class="container p-2 mx-auto sm:p-4 ">
	<h1 class="flex justify-center mb-4 text-2xl font-semibold shadow-inner w-64 leading-tight">Liste des utilisateurs</h1>
	<div class="overflow-x-auto  ">
		<table class="min-w-full text-xs ">
			<colgroup>
				<col>
				<col>
				<col>
				<col>
				<col>
				<col class="w-24">
			</colgroup>
			<thead class="">
				<tr class="text-left">
					<th class="p-3">ID#</th>
					<th class="p-3">Utilisateur</th>
					
					<th class="p-3">Structures</th>
					<th class="p-3 ">Partenaire</th>
					<th class="p-3 ">Email</th>

					<th class="p-3"></th>
				</tr>
			</thead>
			<tbody>
            {% for user in users %}
				<tr class="border-b border-opacity-20 ">
					<td class="p-3">
						<p>{{ user.id }}</p>
					</td>
					<td class="p-3">
						<p>{{ user.fullname }}</p>
					</td>
					
					<td class="p-3">
						<p>{{user.structure}}</p>
						
					</td>
					<td class="p-3">
						<p>{{user.partner}}</p>
						
					</td>
					<td class="p-3">
						<p>{{user.email}}</p>
						
					</td>
                    
					
					<td class="p-3 text-right">
						<span class="px-3 py-1 font-semibold rounded-md ">
							<a href="{{path('delete_user', {'id':user.id} )}}">
								<button class="mx-2 my-2 bg-indigo-400 transition duration-150 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-indigo-300 focus:ring-white hover:bg-indigo-600 rounded text-gray-100 px-6 py-2 text-sm">
									<i class="fa fa-trash mr-2"></i>Supprimer</button>
						</span>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
</div>
<div class="flex justify-center">
	<a class="  flex justify-center w-16 font-semibold  text-indigo-500 transition duration-150 ease-in-out hover:bg-indigo-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-700 border bg-indigo-100  px-8 py-2   text-sm mt-10 rounded-2xl" href="{{ path('app_register') }}">Retour</a>
	</div>
    

    
{% endblock %}
