{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block header %}
	<div class="p-4 bg-gray-800 text-gray-100 sticky top-0 z-10">
		<div class="container flex justify-between h-16 mx-auto">

			<div class="flex items-center p-2">
				<img src="{{ asset('images/logofinal.png')}}" alt="logo" class="w-24 pb-2 ">
			</div>
			<div class="flex items-center md:space-x-4"></div>
		</div>
	</div>
{% endblock %}

{% block content %}

	<form method="post">

		

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		<div class="flex justify-center lg:mt-28">
			<div class="p-6 text-indigo-500">
				<div class="container grid gap-6 mx-auto text-center lg:grid-cols-2 xl:grid-cols-5">
					<div class="w-full px-6 py-16 rounded-md sm:px-12 md:px-16 xl:col-span-2 shadow-lg bg-gray-800">
						<span class="flex justify-center mb-12">
							<img src="{{ asset('images/logofinal.png')}}" alt="logo" class="w-2/4 ">
						</span>
						<h1 class="text-5xl font-extrabold text-indigo-400">Gestion de ta structure</h1>
						<p class="my-8">
							<span class="font-medium text-indigo-500">Modular and versatile.</span>Fugit vero facilis dolor sit neque cupiditate minus esse accusamus cumque at.
						</p>
						<form novalidate="" action="" class="self-stretch space-y-3 ng-untouched ng-pristine ng-valid" wtx-context="1A8AF7C9-DE57-43E1-8EC7-3CF446AC6543">
							<div>
								<label for="inputEmail" class="text-sm sr-only">Email</label>
								<input id="inputEmail" value="{{ last_username }}" type="email" placeholder="Email" name="email" aria-label="Email address" autocomplete="email" required autofocus class="form-control mb-6 w-full rounded-md focus:ring shadow-md focus:ring-sky-400 border-gray-700">
							</div>
							<div>
								<label for="inputPassword" class="text-sm sr-only">Mot de passe</label>
								<input type="password" name="password" id="inputPassword" placeholder="Mot de passe" aria-label="Password" autocomplete="current-password" required class="form-control mb-6 w-full rounded-md focus:ring shadow-md focus:ring-sky-400 border-gray-700">
							</div>
							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
							<button type="submit" class="w-2/4 py-2 font-semibold rounded bg-indigo-500 text-indigo-100 transition duration-150 ease-in-out hover:bg-indigo-600  px-6 text-xs focus:outline-none focus:ring-2 focus:ring-offset-2  focus:ring-indigo-600">Se connecter</button>
						</form>
						{% if error %}
			<div class="alert alert-danger mt-3 text-red-600 ">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
					</div>
					<img src="https://source.unsplash.com/random/480x360/?fitness" alt="" class="object-cover w-full rounded-md xl:col-span-3 dark:bg-gray-500">
				</div>
			</div>
		</div>
	</form>


{% endblock %}
